{
  "manifest_version": 2,

  "name": "ashioarae",
  "description": "用户信息同步工具",
  "version": "1.0",
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": "icon/refresh.png",
    "default_popup": "html/popup.html"
  },

  "icons": { 
	"16": "icon/refresh.png",
	"48": "icon/refresh.png",
	"128": "icon/refresh.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "*://*.bilibili.com/*"
  ]
}