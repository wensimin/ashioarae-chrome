{
  "manifest_version": 2,
  "name": "ashioarae",
  "description": "用户信息同步工具",
  "version": "1.2",
  "options_page": "html/options.html",
  "browser_action": {
    "default_icon": "icon/refresh.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery3.5.1.js",
      "js/data.js",
      "js/utils.js",
      "js/alert.js"
    ]
  },
  "icons": {
    "16": "icon/refresh.png",
    "48": "icon/refresh.png",
    "128": "icon/refresh.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "alarms",
    "notifications",
    "*://*.bilibili.com/*",
    "*://*.steamcommunity.com/*",
    "*://*.twitter.com/*",
    "*://*.github.com/*",
    "*://*.google.com/*",
    "*://*.instagram.com/*",
    "*://*.weibo.com/*",
    "*://*.login.sina.com.cn/*",
    "*://*.baidu.com/*"
  ]
}